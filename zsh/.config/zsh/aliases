alias aliases="nvim $ZDOTDIR/aliases"

alias ga="git add"
alias gb="git branch"
alias gbd="git branch -d"
alias gbD="git branch -D"
alias gbcp="git bc-cherry-pick"
alias gbse="git bc-show-eligible master"
alias gc="git commit -v"
alias gca="git commit -v --amend"
alias gcan="git commit -v --no-edit --amend"
alias gcm="git commit -v -m"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gcom="git checkout master"
alias gd="git diff"
alias gds="git diff --staged"
alias gf="git fetch"
alias gl="git pull"
alias glog="git log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'"
alias gp="git push"
alias gpf="git push --force"
alias grb="git rebase"
alias grba="git rebase --abort"
alias grbc="git rebase --continue"
alias grbi="git rebase -i"
alias grbm="git rebase master"
alias gst="git status"
alias gsta="git stash push"
alias gstd="git stash drop"
alias gstl="git stash list"
alias gstp="git stash pop"
alias gwip=" git commit --no-verify -m '[WIP]'"
alias gunwip="git log -n 1 | grep -q -c '[WIP]' && git reset HEAD~1"

alias krusty="ssh yuryn@krusty"

alias ll="ls -lah"

alias ni="npm i"
alias ns="npm start"
alias nvimrc="nvim $HOME/.config/nvim/init.lua"

alias zshrc="nvim $ZDOTDIR/.zshrc"
