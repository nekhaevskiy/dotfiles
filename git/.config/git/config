[alias]
  discard = checkout --
  nevermind = !git reset --hard HEAD && git clean -d -f
  uncommit = reset --mixed HEAD~
  unstage = reset -q HEAD --
[blame]
  date = relative
[core]
  editor = nvim
[fetch]
  prune = true
[init]
  defaultBranch = main
[log]
  abbrevCommit = true
[pull]
  rebase = true
[push]
  autoSetupRemote = true
  default = simple
