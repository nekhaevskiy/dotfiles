# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# lock the screen
set $i3lockwall sh $XDG_CONFIG_HOME/i3/scripts/lock.sh

# $mod is Win key
set $mod Mod4

# manage the screen
set $mode_display Config screen layout - laptop (l), monitor (m), both (b)

# screenshot
set $mode_screenshot Screenshot - selection (s), full screen (f), active window (a)

# lock / shutdown / reboot menu
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Ctrl+s) shutdown

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# open applications in a specific workspace
assign [class="Alacritty"] $ws1
assign [class="qutebrowser"] $ws2
assign [class="firefox"] $ws2
assign [class="Slack"] $ws3
assign [class="Chromium"] $ws3

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# disable focus windows with mouse
focus_follows_mouse no

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:FiraCode Nerd Font 10
# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
# font pango:DejaVu Sans Mono 8

# defining a floating window for arandr
for_window [class="Arandr"] floating enable

# terminal scratchpad
for_window [instance="alacritty_scratchpad"] move to scratchpad

# htop scratchpad
for_window [instance="htop_scratchpad"] move to scratchpad

# floating pop up automatically
for_window [window_role="pop-up"] floating enable

# floating pop up automatically
for_window [window_role="task_dialog"] floating enable

# manage the screen
mode "$mode_display" {
    bindsym b exec --no-startup-id sh "$HOME/.screenlayout/both.sh", mode "default"
    bindsym l exec --no-startup-id sh "$HOME/.screenlayout/laptop.sh", mode "default"
    bindsym m exec --no-startup-id sh "$HOME/.screenlayout/monitor.sh", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# screenshot menu
mode "$mode_screenshot" {
    bindsym s exec --no-startup-id shutter --min_at_startup -s, mode "default"
    bindsym f exec --no-startup-id shutter --min_at_startup -f, mode "default"
    bindsym a exec --no-startup-id shutter --min_at_startup -a, mode "default"

    # to close the menu: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# lock / shutdown / reboot menu
mode "$mode_system" {
    bindsym l exec --no-startup-id $i3lockwall, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $i3lockwall && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $i3lockwall && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # to close the menu: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# go back to the last workspace with the same keystroke
# workspace_auto_back_and_forth yes

# terminal scratchpad
exec alacritty --class alacritty_scratchpad

# htop scratchpad
exec alacritty --class htop_scratchpad -e htop

# system tray GUI for blueberry (Bluetooth configuration tool)
exec --no-startup-id blueberry-tray

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# desktop notifications
exec --no-startup-id dunst

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# start i3bar to display a workspace bar (plus the system information i3status finds out, if available)
bar {
    status_command i3status --config $XDG_CONFIG_HOME/i3/i3status.conf
    
    # tray_output none
    tray_output primary

    font pango:FiraCode 9
    # separator_symbol " "
}

###############
# Keybindings #
###############

# screenshot
bindsym Print mode "$mode_screenshot"

# use pactl to adjust volume in PulseAudio
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status

# keyboard player controls
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPrev exec playerctl previous

# keyboard backlight controls
bindsym XF86KbdBrightnessDown exec xbacklight -ctrl smc::kbd_backlight -dec 10
bindsym XF86KbdBrightnessUp exec xbacklight -ctrl smc::kbd_backlight -inc 10

# screen brightness controls
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

